#!/bin/sh
#
# Open a sublime project with a single command
BIN_BASE=$(dirname $0)
source $BIN_BASE/../path

if [ $# -eq 0 ]
  then
    echo "No arguments supplied"
    exit
fi

# Get the project name
ARG=$1
PFILE=$P_DIR/$ARG.sublime-project

if [ ! -f $PFILE ]; then
	echo "Project not found."
	exit
fi

subl --project $PFILE